<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>telegramBotV1</artifactId>
  <name>TelegramBot</name>
  <version>1.01</version>
  <description>project for mathematics</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>work.Main</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <telegram.version>5.0.1</telegram.version>
    <java.version>11</java.version>
    <apache.poi.version>4.1.2</apache.poi.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <org.projectlombok.version>1.18.16</org.projectlombok.version>
    <project.build.sourveEncoding>UTF-8</project.build.sourveEncoding>
  </properties>
</project>

